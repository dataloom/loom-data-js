  },
  "contributors": [
    {
      "name": "Hristo Oskov",
      "email": "hristo@kryptnostic.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kryptnostic/loom-api-js.git"
  },
  "bugs": {
    "url": "https://github.com/kryptnostic/loom-api-js/issues"
  },
  "license": "Apache-2.0",
  "main": "build/loom-api.js",
  "dependencies": {
    "axios": "^0.14.0",
    "bluebird": "^3.4.6",
    "lodash": "^4.16.4",
    "loglevel": "^1.4.1",
    "moment": "^2.15.1"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "better-npm-run": "0.0.11",
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^7.1.0",
    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-flowtype": "^2.19.0",
    "eslint-plugin-import": "^1.15.0",
    "flow-bin": "^0.32.0",
    "json-loader": "^0.5.4",
    "npm-run-all": "^3.1.0",
    "rimraf": "2.5.4",
    "webpack": "^2.1.0-beta",
    "webpack-dev-server": "^2.1.0-beta"
  },
  "scripts": {
    "build": "npm-run-all clean lint --parallel build:prod build:prod:min",
    "build:prod": "better-npm-run build:prod",
    "build:prod:min": "better-npm-run build:prod:min",
    "clean": "rimraf build/*",
    "flow": "flow check",
    "lint": "eslint --config .eslintrc src test",
    "release:major": "echo \"Error: release:major task not implemented\" && exit 1",
    "release:minor": "echo \"Error: release:minor task not implemented\" && exit 1",
    "release:patch": "echo \"Error: release:patch task not implemented\" && exit 1",
    "test": "echo \"Error: test task not implemented\" && exit 1",
    "webpack-dev-server": "better-npm-run webpack-dev-server"
  },
  "betterScripts": {
    "build:prod": {
      "command": "webpack --config config/webpack.config.babel.js",
      "env": {
        "BUILD": "production",
        "MINIMIZE": "false"
      }
    },
    "build:prod:min": {
      "command": "webpack --config config/webpack.config.babel.js",
      "env": {
        "BUILD": "production",
        "MINIMIZE": "true"
      }
    },
    "webpack-dev-server": {
      "command": "webpack-dev-server --config config/webpack.config.babel.js --port 9000 --content-base build/",
      "env": {
        "BUILD": "development"
      }
    }
  }
}
